{% for ns in FlashMessage.getNamespaces() %}
  {% if FlashMessage.hasMessages(ns) %}
    <div class="container">
      {% for message in FlashMessage.getMessages(ns) %}
        <div class="alert alert-info">
          <button type="button" class="close" data-dismiss="alert">&times;</button>

          {{ message }}
        </div>
      {% endfor %}
    </div>
  {% endif %}
{% endfor %}